#app {
  overflow-y: scroll;
  background: #f2c6c4;
}

#app .swiper-container {
  width: 97%;
  min-height: 380rpx;
  height: 380rpx;
  margin: 10rpx auto;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

#app .swiper-container .swiper-item {
  width: 100%;
  display: block;
}

#app .swiper-container .swiper-item .slide-image {
  width: 100%;
  height: 100%;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  padding: 0 10rpx;
}

#app .tabs {
  position: relative;
  height: 100%;
  width: 100%;
  background-color: white;
  -webkit-transition: all 1s;
  -moz-transition: all 1s;
  -ms-transition: all 1s;
  -o-transition: all 1s;
  transition: all 1s;
}

#app .tabs .nav-tabs {
  width: 100%;
  height: 75rpx;
  display: flex;
  margin: 46rpx 0;
  box-shadow: #333 0 0 8rpx;
}

#app .tabs .nav-tabs .tab-list {
  line-height: 75rpx;
  text-align: center;
  position: relative;
  flex: 1;
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
}

#app .tabs .nav-tabs .tab-list::before {
  content: '';
  position: absolute;
  top: 50%;
  right: 0;
  -webkit-transform: translate(0, -50%);
  -moz-transform: translate(0, -50%);
  -ms-transform: translate(0, -50%);
  -o-transform: translate(0, -50%);
  transform: translate(0, -50%);
  width: 5rpx;
  background-color: #fbfbfb;
  height: 40rpx;
}

#app .tabs .nav-tabs .tab-list:last-child::before {
  display: none;
}

#app .tabs .nav-tabs .active {
  line-height: 75rpx;
  text-align: center;
  color: #fc5558;
  flex: 1;
  border-bottom: 1px solid red;
  font-weight: bold;
  font-size: 28rpx;
}

#app .tabs .tab-content {
  height: 60%;
}

#app .tabs .tab-content .swiper-item {
  overflow: auto !important;
  height: auto;
}

#app .tabs .tab-content .module-content {
  height: auto;
  overflow-y: auto;
}

#app  .tips {
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  text-align: center;
  font-size: 28rpx;
  margin: 0 auto;
  background: linear-gradient(white, #eee);
}

#app .btn-group {
  position: fixed;
  bottom: 45rpx;
  right: 60rpx;
}

#app .btn-group button {
  margin: 0;
  padding: 0;
}

#app .btn-group .btn-release {
  margin-bottom: 30rpx;
  height: 100rpx;
  font-size: 0;
  color: white;
  border-radius: 50%;
}

#app .btn-group .btn-release .icon {
  font-weight: 100;
  line-height: 100rpx;
  font-size: 50rpx;
  width: 100rpx;
  height: 100rpx;
}

#app .btn-group .btn-top {
  height: 100rpx;
  border-radius: 50%;
  transform: rotate(90deg);
}

#app .btn-group .btn-top .scon-top {
  line-height: 100rpx;
  font-size: 50rpx;
  width: 100rpx;
  height: 100rpx;
}

#app .tabs-fixed {
  position: absolute;
  -webkit-transform: translateY(-120rpx);
  -moz-transform: translateY(-120rpx);
  -ms-transform: translateY(-120rpx);
  -o-transform: translateY(-120rpx);
  transform: translateY(-12rpx);
  top: 0;
}

#app .tabs-fixed .tab-content {
  animation: Heightanimate 0.1s linear;
  height: 100%;
}

@keyframes Heightanimate {
  from {
    height: 60%;
  }

  to {
    height: 100%;
  }
}
